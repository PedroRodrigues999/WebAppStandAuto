@page
@model WebApplicationStandAuto.Pages.CreateStandModel
@{
}

<h2>Adicionar novo Automóvel ao Stand</h2>

<div class="d-flex justify-content-center align-items-center">

    <form method="POST" style="width: 30vw;">

        <div class="form-group m-3">
            <label for="marca">Marca</label>
            <input type="text" class="form-control" name="marca" id="marca" placeholder="Insira a marca" />
        </div>
        <div class="form-group m-3">
            <label for="modelo">Modelo</label>
            <input type="text" class="form-control" id="modelo" name="modelo" placeholder="Insira o modelo" />
        </div>
        <div class="form-group m-3">
            <label for="ano">Ano</label>
            <input type="text" class="form-control" id="ano" name="ano" placeholder="Insira o ano" />
        </div>
        @if (Model.ErrorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.ErrorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        <div class="form-group m-3">
            <label for="cor">Cor</label>
            <input type="text" class="form-control" id="cor" name="cor" placeholder="Insira a cor" />
        </div>
        <div class="form-group m-3">
            <label for="fonte_Energia">Fonte de Energia</label>
            <input type="text" class="form-control" id="fonte_Energia" name="fonte_Energia" placeholder="Insira a fonte de Energia" />
        </div>
        <div class="form-group m-3">
            <label for="matricula">Matricula</label>
            <input type="text" class="form-control" id="matricula" name="matricula" placeholder="Insira a matricula" />
        </div>
        <div class="form-group m-3">
            <label for="preco_compra">Preço de Compra</label>
            <input type="text" class="form-control" id="preco_compra" name="preco_compra" placeholder="Insira o preço de compra" />
        </div>
        @if (Model.ErrorMessage3.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.ErrorMessage3</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        <div class="form-group m-3">
            <label for="quilometros">Quilómetros</label>
            <input type="text" class="form-control" id="quilometros" name="quilometros" placeholder="Insira os quilómetros" />
        </div>
        @if (Model.ErrorMessage2.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.ErrorMessage2</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        <div class="form-group m-3">
            <label for="preco_venda">Preço para venda</label>
            <input type="text" class="form-control" id="preco_venda" name="preco_venda" placeholder="Insira o preço para venda" />
        </div>
        @if (Model.ErrorMessage4.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.ErrorMessage4</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        <div class="d-flex justify-content-center m-3">
            <input class="btn btn-primary" type="submit" value="Criar" onclick="return confirm('Automóvel vai passar para a tabela Stand. Quer mesmo fazer a alteração?')" />
        </div>



    </form>
</div>
